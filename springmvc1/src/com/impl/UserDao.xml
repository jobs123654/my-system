<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserDao">


   <sql id="user_field">
   userName,useNumber,userPassword,userSex,role
   </sql>
  <select id="getUser" resultType="map">
      select  <include refid="user_field"></include> from User where id = #{id}
  </select>
  <select id="getUser1" resultType="user">
      select useNumber, userName,userPassword from User where id = #{id} and userName=#{userName} 
  </select>
   
    <select id="getUserByMap" resultType="user">
       select useNumber, userName,userPassword from User where id = #{id} and userName=#{userName} 
    </select>
    
    <select id="selectAll" resultType="user">
       select * from User where userName like   concat('%',#{userName},'%')
    </select>
   <insert id="add" useGeneratedKeys="true" keyProperty="id">
   
  <!--  
  对于oracle 数据库 不支持自增策略
  <selectKey order="BEFORE" keyProperty="">
    select * from user.nextval
   </selectKey> -->
       insert into user(useNumber,userPassword,userName,userSex,userNumber,role,isRemember) values(#{useNumber},#{userPassword},#{userName},#{userSex},#{userNumber},#{role},#{isRemember})
   </insert>
   
    <delete id="delete">
    delete from User where id =#{id}
    </delete>
    
     <resultMap type="book" id="booklist">
         <id property="id" column="id"/>
         <result property="name" column="name"/>
          <result property="uid" column="uid"/>
          <!-- <association property="user"  javaType="user">
          <id property="id" column="id"/>
         <result column="useNumber" property="useNumber"/>
         </association> -->
     </resultMap>
      <select id="lb" resultMap="booklist">
        select b.id,b.name ,b.uId from Book b   join User u on u.id=b.uId
      </select>
      
      <select id="getUserMap" resultType="map">
        select * from User where id =#{id}
      </select>
      
       <select id="getUserOne" resultType="user">
        select * from User where id =#{id}
      </select>
      
       <select id="getUserMapList" resultType="map">
        select * from User 
       </select>
       
       
       
        
</mapper>